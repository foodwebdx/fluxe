# Database Configuration
# Para Neon.tech usa el formato:
# DATABASE_URL="postgresql://neondb_owner:tu_password@tu-host.neon.tech/neondb?sslmode=require"
DATABASE_URL="postgresql://usuario:password@localhost:5432/fluxe?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# AWS S3 Configuration
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET_NAME=fluxe-evidencias-prod

# KAPSO WhatsApp Configuration
KAPSO_API_KEY=your_kapso_api_key_here
KAPSO_BASE_URL=https://api.kapso.ai/meta/whatsapp
KAPSO_PHONE_NUMBER_ID=your_phone_number_id_here
KAPSO_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_NOTIFICATIONS_ENABLED=true

# Email Notifications (SMTP)
EMAIL_NOTIFICATIONS_ENABLED=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="Fluxe <no-reply@fluxe.com>"
SMTP_SECURE=false
